{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "extends": [
    "@nuxtjs",
    "plugin:security/recommended"
  ],
  "plugins": [
    "no-secrets"
  ],
  "rules": {
    "no-secrets/no-secrets": [
      "error"
    ],
    "semi": [
      2,
      "always"
    ],
    "vue/no-v-html": "off",
    "vue/name-property-casing": [
      "error",
      "PascalCase"
    ],
    "vue/component-name-in-template-casing": [
      "error",
      "kebab-case",
      {
        "registeredComponentsOnly": true,
        "ignores": []
      }
    ]
  }
}
